<% include partials/_head %>

<div class="container">
  <div class="row">
    <div class="col-sm-12"><h1><%= message %></h1></div>
  </div>
  
  <div class="row">
    <div class="col-sm-5 col-md-5">

      <h2>Register</h2>
      <br>
      <form action="/auth/register" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="userName">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>


    <div class="col-sm-5 col-md-5 col-md-offset-1">

      <h2>Sign In</h2>
      <br>
      <form action="/auth/signIn" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="signInUserName">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="signInPassword">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
  
</div>

<% include partials/_foot %>
